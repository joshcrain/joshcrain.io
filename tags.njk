---
layout: "layout.njk"
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: /tags/{{ tag }}/
---
<p class="lead">Here are all articles tagged with “{{ tag }}.” </p>
<ul class="list--articles">
{% set taglist = collections[ tag ] %}
{% for post in taglist %}
  <li><a href="{{ post.url | url }}" class="text--largest">{{ post.data.pageTitle }}</a>
  <p>{% if post.data.date %}<time class="text--secondary small-caps">{{ post.data.date|date("D MMM Y") }}</time> &mdash; {% endif %}{{ post.data.metaDescription }}</p></li>
{% endfor %}
</ul>